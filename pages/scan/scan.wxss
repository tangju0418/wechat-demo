.my-content{
  position: absolute;
  width:100%;
  height:100%;
}
.scan{
  width:400rpx;
  height:400rpx;
  position:absolute;
  z-index:2;
  top:46%;
  left:calc(50% - 200rpx);
  color: #ff7d00;
  font-size:34rpx;
  text-align: center;
}
