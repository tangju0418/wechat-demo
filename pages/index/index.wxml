
<view class="page">
  <view class="page__bd">
    <view class="weui-tab">
      <view class="weui-navbar">
        <block wx:for="{{tabs}}" wx:key="*this">
          <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
            <view class="weui-navbar__title">{{item}}</view>
          </view>
        </block>
        <view class="weui-navbar__slider" style=" transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
      </view>
      <view class="weui-tab__panel">
        <!--点餐页面-->
        <view class="weui-tab__content" hidden="{{activeIndex != 0}}">
          <view class="left-list">
            
            <view class="weui-cells weui-cells_after-title">
              <block wx:for="{{lists}}">
                
                <view class="weui-cell" data-index="{{item.nub}}" data-name="{{item.name}}" bindtap="selectType">
                  <view wx:if="{{currentType==item.nub}}" class="left-line"></view>
                  <view class="weui-cell__bd">{{item.name}}</view>
          
                </view>
              </block>
            </view>
          </view>
          <view class="right-list">
            <view class="right-header">
              <view class="type-name">{{currentTypeName}}</view>
            </view>
            <view class="right-content"></view>
          </view>
          <view class="footer-content"></view>
        </view>

        <!--呼叫页面-->
        <view class="weui-tab__content" hidden="{{activeIndex != 1}}">选项二的内容</view>

        <!--订单页面-->
        <view class="weui-tab__content" hidden="{{activeIndex != 2}}">选项三的内容</view>

        <!--我的页面-->
        <view class="weui-tab__content" hidden="{{activeIndex != 3}}">选项四的内容</view>
      </view>
    </view>
  </view>
</view>