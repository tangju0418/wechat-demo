.weui-navbar{
  height:40px;
  background-color: #fffef9;
  border-bottom:1rpx solid #e6e7e7;
}
.weui-navbar__item{
  padding:0;
}
.weui-navbar__title{
  line-height:40px;
  color: #4c4c4c;
  font-weight: bold;
}
.weui-bar__item_on .weui-navbar__title{
  color:#ff7d00;
}
.weui-navbar__slider{
  background-color:#ff7d00;
  width:30px;
  left: calc(12.5% - 15px);
}
.weui-tab{
  position:static;
}
.weui-tab__panel{
  position:absolute;
  top:40px;
  height:auto;
  bottom:0;
  padding:0;
  width:100%;
}
.left-list{
  position:absolute;
  left:0;
  width:88px;
  top:0;
  bottom:50px;
  background-color:#f9f4f0;
  overflow-y: auto;
  border-right:1px solid #e6e7e7;
  box-sizing: border-box;
}
.left-cell{
  background-color:#f9f4f0;
}
.left-cell-current{
  color:#ff7d00;
  background-color:#fffef9;
}
.right-list{
  position: absolute;
  left:88px;
  right:0;
  top:0;
  bottom:50px;
  background-color: #fffef9;
}
.right-header{
  height:27px;
  background-color: #f7f7f7;
  position:relative;
  border-bottom:1px solid #e6e7e7;
  box-sizing:border-box;
}
.right-content{
  overflow-y: auto;
  position:absolute;
  height:calc(100% - 27px);
  width:100%;
  top:27px;
}
.weui-cells-right:before{
  display: none;
}
.footer-content{
  position: absolute;
  height:50px;
  background-color: #f7f7f7;
  bottom:0;
  width:100%;
  border-top:1px solid #e6e7e7;
  box-sizing:border-box;
}
.left-cell:before{
  left:5px;
  right:3px;
  color:#e6e7e7;
  border-top:1rpx solid #e6e7e7;
}
.left-line{
  position:absolute;
  height:16px;
  width:3px;
  background-color:#ff7d00;
  top:calc(50% - 8px);
  left:0;
}
.type-name{
  color:#b1b1b1;
  font-size:15px;
  line-height:27px;
  padding-left:10px;
}
.type-name:before{
  content: " ";
  width:3px;
  height:16px;
  position:absolute;
  left:0;
  top:calc(50% - 8px);
  background-color:#b1b1b1;
}
.right-cell{
  padding:0;
  background-color:#fffef9;
}
.right-cell::before{
  left:11px;
  right:0;
}
.food-img{
  height:58px;
  width:58px;
  margin: 14px 9px 14px 11px;
  vertical-align: middle;
  border-radius:5px;
}
.weui-cell-n{
  font-size:15px;
  color:#4c4c4c;
  font-weight:bold;
}
.weui-cell-q{
  font-size:11px;
  color:#b1b1b1;
  font-weight: normal;
}
.weui-cell-p{
  font-size:16px;
  color:#ff5916;
  font-weight:bold;
}
.icon-content{
  position:absolute;
  right:10px;
  bottom:12px;
  height:25px;
}
.icon-num{
  display:inline-block;
  min-width:35px;
  text-align: center;
  padding:0 5px;
  box-sizing: border-box;
}