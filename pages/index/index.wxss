.weui-navbar{
  height:40px;
  background-color: #fffef9;
}
.weui-navbar__item{
  padding:0;
}
.weui-navbar__title{
  line-height:40px;
  color: #4c4c4c;
  font-weight: bold;
}
.weui-bar__item_on .weui-navbar__title{
  color:#ff7d00;
}
.weui-navbar__slider{
  background-color:#ff7d00;
  width:30px;
  left: calc(12.5% - 15px);
}
.weui-tab{
  position:static;
}
.weui-tab__panel{
  position:absolute;
  top:40px;
  bottom:50px;
  padding:0;
  width:100%;
}